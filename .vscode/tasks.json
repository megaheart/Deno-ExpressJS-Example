{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "deno",
      "command": "run",
      "args": [
        "--config",
        "./deno.jsonc",
        "--allow-all",
        "${workspaceFolder}/main.ts"
      ],
      "problemMatcher": [
        "$deno"
      ],
      "label": "deno: run",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
